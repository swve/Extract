{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}

<div class="main">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 embed-responsive" id="intro">
                <video autoplay loop muted>
                    <source src="video/animation.mp4" type="video/mp4">
                </video>
                <form name="registration" method="post" class="my-form-class">
                <div id="inscription" class="col-12 text-center">
                    <div class="fond">
                        <h2>Inscription</h2>
                        <input id="pseudo" type="text" placeholder="Pseudo" name="registration[username]" required="required" maxlength="255" >
                        <input id="mdp" type="text" placeholder="Adresse email " name="registration[email]" required="required" maxlength="255">
                        <input id="mdpplus" type="password" placeholder="Mot de passe " name="registration[password]" required="required" maxlength="255">
                        {{ form_row(form._token) }}
                        <input type="submit" value="Inscription">
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>


{% endblock %}
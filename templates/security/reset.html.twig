{% extends 'base.html.twig' %}

{% block title %}Reset password{% endblock %}

{% block body %}


<div class="container">


    <br>
    <br>
    <br>
    <h1>Extract : Reset password </h1>

    {% for flash_message in app.session.flashBag.get('info') %}
    <div class="flash-notice">
        {{ flash_message }}
    </div>
    {% endfor %}
    
    <br><br>
    <h1>ID : {{ user_id }}</h1>
    <form action="{{ path('security_reset') }}" method="post">
        <div class="form-group">
            <label for="">Pour changer votre mot de passe , veuillez entrer votre email</label>
            <input type="email" class="form-control" name="" id="" aria-describedby="emailHelpId" placeholder="">
            <small id="emailHelpId" class="form-text text-muted">Un mail de configuration vous sera envoy√© </small><br>
            <button type="submit" class="btn btn-primary ">Changer de mot de passe</button>

        </div>
    </form>

</div>
{% endblock %}
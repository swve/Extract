

<div class="row">
    <div class="col-sm-4">
        <div class="row">
            <div class="col-sm-9 jeton_div">
                {% for jeton in partie.jetonsTerrain.video %}
                    <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="50px" />
                {% endfor %}
            </div> 
                
            <div class="col-sm-9 jeton_div">
                {% for jeton in partie.jetonsTerrain.data %}
                    <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="50px" />
                {% endfor %}
            </div>
                
            <div class="col-sm-9 jeton_div">
                {% for jeton in partie.jetonsTerrain.plan %}
                    <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="50px" />
                {% endfor %}
            </div>
           
            <div class="col-sm-9 jeton_div">
                <div class="row">
                    <div class="col-sm-4">
                        {% for jeton in partie.jetonsTerrain.Bonus_3 %}
                            {% if loop.first %}
                                <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="50px"/>
                            {% endif %}

                        {% endfor %}
                        {{ partie.jetonsTerrain.Bonus_3|length }}
                    </div>
                    <div class="col-sm-4">
                        {% for jeton in partie.jetonsTerrain.Bonus_4 %}
                            {% if loop.first %}
                                <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="50px"/>
                            {% endif %}

                        {% endfor %}
                        {{ partie.jetonsTerrain.Bonus_4|length }}
                    </div>
                    <div class="col-sm-4">
                        {% for jeton in partie.jetonsTerrain.Bonus_5 %}
                            {% if loop.first %}
                                <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="50px"/>
                            {% endif %}

                        {% endfor %}
                        {{ partie.jetonsTerrain.Bonus_5|length }}
                    </div>
                </div>
            </div>
            
            <div class="col-sm-9 jeton_div">
                {% for jeton in partie.jetonsTerrain.audio %}
                    <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="50px" />{{ loop.index }}
                {% endfor %}
            </div>
           
            <div class="col-sm-9 jeton_div">
                {% for jeton in partie.jetonsTerrain.app %}
                    <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="50px" />
                {% endfor %}
            </div>
           
            <div class="col-sm-9 jeton_div">
                {% for jeton in partie.jetonsTerrain.disque %}
                    <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="50px" />
                {% endfor %}
            </div>
           
        </div>
    </div>
    <div class="col-sm-8">
        <div class="row" style="margin-bottom:30px; height:550px">
            <div class="col-sm-12" style="height: 100px">
                {% for carte in partie.mainJ2 %}
                    <img src="{{ asset('cartes/dos.jpg') }}" height="100px" />
                {% endfor %}
            </div>
            <div class="col-sm-12" style="height: 100px">
                {% for carte in partie.chameauxJ2 %}
                    <img src="{{ asset('cartes/'~cartes[carte].fichier) }}" height="100px" />
                {% endfor %}
            </div>
            <div class="col-sm-12" style="height: 140px">
                <div class="row">
                    <div class="col-sm-2">{% if partie.pioche|length >0 %}<img src="{{ asset('cartes/dos.jpg') }}" height="100px"  />{% else %}Vide{% endif %}<p>Pioche {{ partie.pioche|length }}</p></div>
                    <div id="terrain" class="row">
                    {% for carte in partie.terrain %}
                    <div class="col-sm-2" id="carte-{{ carte }}"><img src="{{ asset('cartes/'~cartes[carte].fichier) }}" height="100px" class="carteterrain {% if cartes[carte].valeur == 0 %}chameau{% endif %}"  data-carte="{{ carte }}" /></div>
                    {% endfor %}
                    </div>
                </div>
            </div>
            <br><br>
            <div class="col-sm-12" style="height: 100px">
                {% for carte in partie.chameauxJ1 %}
                    <img src="{{ asset('cartes/'~cartes[carte].fichier) }}" class="cartechameau" height="100px" data-carte="{{ carte }}" />
                {% endfor %}
            </div>
            <div class="col-sm-12" style="height: 100px" >Mes cartes<br>
                <div id="main" class="row">
                    {% for carte in partie.mainJ1 %}
                        <img src="{{ asset('cartes/'~cartes[carte].fichier) }}" class="cartemain" height="100px" data-carte="{{ carte }}" />
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="row" id="bloc-action">
            <div class="col-sm-4">
                <button class="btn btn-block btn-info" id="action-prendre">Prendre</button>
            </div>
            <div class="col-sm-4">
                <button class="btn btn-block btn-danger" id="action-vendre">Vendre</button>
            </div>
            <div class="col-sm-4">
                <button class="btn btn-block btn-warning" id="action-troquer">Troquer</button>
            </div>
        </div>
        <div class="row" id="bloc-suivant" style="display:none">
            <button class="btn btn-block btn-success" id="action-terminer">Terminer mon tour</button>
        </div>
    </div>
</div>